@model List<srvy.Models.TBL_USERSRESPONSE>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html>
<head>
    <title>KATILIMCILAR</title>
</head>
<body style="margin-top:150px;">
    @using (Html.BeginForm("MailSend", "Mail", FormMethod.Post))
    {
        <div class="card m-4" >
            <div class="card-body" style="font-size:40px; text-align:center;">
                <b>@ViewBag.Anket</b>
            </div>
        </div>
        foreach (var item in Model)
        {
            <div class="card m-4">
                <div class="row card-body">
                    <div class="col-3">
                        @Html.Label("KATILIMCI:")
                    </div>
                    <div class="col-5">
                        @Html.Label(@item.TBL_USERS.FirstName.ToString() + item.TBL_USERS.LastName.ToString())

                    </div>
                </div>
                <div class="row card-body">
                    <div class="col-3">
                        @Html.Label("Mail ADRESİ:")
                    </div>
                    <div class="col-3">
                        @Html.Label(item.TBL_USERS.Email.ToString(), item.TBL_USERS.Email.ToString())
                    </div>
                </div>
                <div class="row card-body">
                    <div class="col-3">
                        @Html.Label("IP ADRESİ:")
                    </div>
                    <div class="col-3">
                        @Html.Label(srvy.Controllers.HomeController.GetClientIp())
                    </div>
                </div>
            </div>
        }
    }
</body>
</html>

