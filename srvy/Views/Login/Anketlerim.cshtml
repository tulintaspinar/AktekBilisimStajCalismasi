@model List<srvy.Models.TBL_SURVEY>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bilgilerim.css" rel="stylesheet" />
    <title>Anketlerim</title>
</head>
<body>
   <div class="container" style="margin-top:150px;">
       <div class="row">
           <div class="col-12">
               @using (Html.BeginForm("anketOlusturButton", "Login", FormMethod.Post))
               {
                   <input type="submit" class="btn btn- btn-danger btn-block" value="ANKET OLUŞTUR" formtarget="_parent"/>
               }
           </div>
       </div>
       <br />
       <div class="card mb-2">
           <div class="row card-body">
               <div class="col-3" style="margin-left:50px;">
                   <b style="font-size:30px;">ID</b><br />
                   @foreach (var item in Model)
                   {
                      @item.ID
                   }
               </div>
               <div class="col-5" style="margin-left:75px;">
                   <b style="font-size:30px;">ANKET ADI</b><br />
                   @foreach (var item in Model)
                   {
                       using (Html.BeginForm("Index", "Mail", FormMethod.Post))
                       { 
                           @item.SurveyName
                           <input type="submit" class="btn btn-outline-dark" style="margin-left:100px; height:30px; font-size:15px; text-align:center;" value="KALDIR" />
                           <button type="submit" name="btnKatilim" class="btn btn-outline-dark" style=" height:30px; font-size:15px; text-align:center;" formmethod="post" formtarget="_parent" value="@item.UsersID @item.ID">KATILIMLAR</button>
                       }
                   }
               </div>
           </div>
       </div>
   </div>
</body>
</html>
